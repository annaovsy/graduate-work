@model TestWithoutAutentification.Models.Resume
@*Просмотр резюме (для сторонних людей)*@
@{
    ViewData["Title"] = "Просмотр Резюме";
}

<nav class="navbar navbar-expand-sm">
    <div class="container justify-content-end">
        <partial name="_LoginPartialCompany" />
    </div>
</nav>

<h3>Просмотр резюме</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MobilePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobilePhone)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SexId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CitizenshipsId)
        </dt>
        <dd class="col-sm-10">
            @foreach (var i in Model.Citizenships)
            {
                @Html.DisplayFor(model => i.Name)<br />
            }
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkExperienceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkExperience.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary.Amount)
            @Html.DisplayFor(model => model.Salary.Currency.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AboutMyself)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AboutMyself)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EducationLevelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EducationLevel.Name)
        </dd>
    </dl>
</div>
<div class="form-group">
    <input type="button" class="btn btn-primary compItem" data-url="@Url.Action("GetPartialMail", "CompanyHome", new { id = Model.Id })" value="Связаться" />
</div>
<div>
    <a asp-action="Index" asp-controller="CompanyHome">К списку</a>
</div>