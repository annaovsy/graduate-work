@model IEnumerable<TestWithoutAutentification.Models.Resume>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citizenships)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutMyself)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @item.DateOfBirth.ToString("MM/dd/yyyy")
                @*@Html.DisplayFor(modelItem => item.DateOfBirth)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkExperience.Name)
            </td>
            <td>
                @foreach (var i in item.Citizenships)
                {
                    @Html.DisplayFor(model => i.Name)
                    <br />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary.Amount)
                @Html.DisplayFor(modelItem => item.Salary.Currency.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutMyself)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.PlaceOfWorkId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EducationalInstitutionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForeignLanguageId)
        </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
