@model TestWithoutAutentification.Models.Resume
 @*Показ резюме Пользователя*@
@{
    ViewData["Title"] = "Ваше резюме";
}
<nav class="navbar navbar-expand-sm">
    <div class="container justify-content-end">
        <partial name="_LoginPartial" />
    </div>
</nav>

<h4>Ваше резюме</h4>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    <a data-url="@Url.Action("Delete", "Resumes", new { id = Model.Id })" asp-route-id="@Model.Id" type="button" class="compItem" style="margin-left: 3.5vh;">Удалить</a>    
</div>
<div>
    <hr />
    <h3 class="mb-3">@Html.DisplayFor(model => model.Position)</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MobilePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobilePhone)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SexId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecializationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkExperienceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkExperience.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary.Amount)
            @Html.DisplayFor(model => model.Salary.Currency.Name)
        </dd>
    </dl>
    @if (Model.AboutMyself != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutMyself)
            </dt>
            <dd class="col-sm-10">
                <textarea asp-for="AboutMyself" style="overflow:hidden;" class="textareaShow" readonly></textarea>
            </dd>
        </dl>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EducationLevelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EducationLevel.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ForeignLanguage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ForeignLanguage.Language.Name)<br />
            <span class="font-weight-bolder">Уровень </span>@Html.DisplayFor(model => model.ForeignLanguage.LanguageLevel.Name)
        </dd>
    </dl>
    <div class="mb-3" style="font-size: 0.85rem; color:gray;">
        Создано @Html.DisplayFor(model => model.CreationDate)
    </div>
</div>