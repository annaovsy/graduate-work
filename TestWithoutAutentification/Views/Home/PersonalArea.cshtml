@model TestWithoutAutentification.Models.User
@*Личный кабинет пользователя*@
@{
    ViewData["Title"] = "Личный кабинет";
}

<nav class="navbar navbar-expand-sm">
    <div class="container justify-content-end">
        <partial name="_LoginPartial" />
    </div>
</nav>

<div>
    <h4>Личный кабинет</h4>
    <hr />
<div class="mb-4">
    <a asp-action="EditUser" asp-controller="Account" asp-route-id="@Model.Id">Редактировать</a>
    <a data-url="@Url.Action("DeleteUser", "Account", new { id = Model.Id })" asp-route-id="@Model.Id" type="button" class="modalBtn" style="margin-left: 3.5vh;">Удалить профиль</a>
</div>
    <dl class="row">
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

