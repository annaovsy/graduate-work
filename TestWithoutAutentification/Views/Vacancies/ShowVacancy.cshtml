@model TestWithoutAutentification.Models.Vacancy
@*Просмотр вакансий (для сторонних людей)*@
@{
    ViewData["Title"] = "Просмотр Вакансии";
}

<nav class="navbar navbar-expand-sm">
    <div class="container justify-content-end">
        <partial name="_LoginPartial" />
    </div>
</nav>

<h3>Просмотр вакансии</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary.Amount)
            @Html.DisplayFor(model => model.Salary.Currency.Name)
        </dd>
    </dl>
    @if (Model.City != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                г. @Html.DisplayFor(model => model.City.Name)
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl>
    }

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkExperienceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkExperience.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requirements)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conditions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conditions)
        </dd>
    </dl>
    @if (Model.Remote)
    {
        <dl class="row">
            <dd class="col-sm-10">
                Есть возможность удаленной работы
            </dd>
        </dl>
    }
    <h5>О компании</h5>
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Company.Site">@Model.Company.Site</a>
        </dd>
        <dt class="col-sm-2">
            Контактное лицо
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.FullNameContactPerson)<br />
            <a href="mailto:@Model.Company.Email">@Model.Company.Email</a>
        </dd>

    </dl>

</div>
<div class="form-group">
    <input type="button" class="btn btn-primary compItem" data-url="@Url.Action("GetPartialMail", "CompanyHome", new { id = Model.Id })" value="Связаться" />
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Вернуться к списку</a>
</div>