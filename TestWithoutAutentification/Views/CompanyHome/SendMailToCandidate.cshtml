@model TestWithoutAutentification.Models.User

<div class="modal-content" style="height:80vh;">
    <div class="modal-header">
        <h4>Отправить Email</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form method="post" asp-action="SendMailToCandidate" asp-controller="CompanyHome">
            <label>Заголовок:</label><br />
            <input type="text" name="title" /><br /><br />
            <label>Сообщение:</label><br />
            <textarea name="text" style="width:100%; height:40vh;"></textarea><br /><br />
            <input name="id" type="hidden" asp-for="Id" />
            <input class="buttonModal" type="submit" value="Отправить" />
        </form>
    </div>
</div>